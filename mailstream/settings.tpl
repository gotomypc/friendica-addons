<div class="settings-block">
  <h3>Mail Stream Settings</h3>
  <form method="post">
    <table>
      <tbody>
        <tr>
          <td>Address:</td><td><input class="input" size="70" name="address"$address></td>
        </tr>
        <tr>
          <td>Delay:</td><td><input class="input" size="10" name="delay"$delay</td>
        </tr>
        <tr>
          <td colspan="2"><input type="submit"></td>
        </tr>
      </tbody>
    </table>
  </form>
</div>
